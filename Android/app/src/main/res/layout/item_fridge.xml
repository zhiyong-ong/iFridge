<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/activity_horizontal_margin"
    android:background="?attr/selectableItemBackground"
    android:clickable="true">

    <TextView
        android:id="@+id/text_item_name"
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:text="@string/placeholder_text_item_name"
        android:layout_marginLeft="10dp"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/colorItem"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/text_item_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:text="@string/placeholder_text_item_count"
        android:fontFamily="sans-serif-condensed"
        android:textColor="@color/colorItem"
        android:textSize="20sp"/>

    <View
        android:id="@+id/divider_main"
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_height="1dp"
        android:layout_below="@id/text_item_name"
        android:background="@color/colorDivider"/>

</RelativeLayout>